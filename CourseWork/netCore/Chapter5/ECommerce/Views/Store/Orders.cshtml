@{
    ViewData["Title"] = "Dashboard Page";
}
<h5><a href="/dashboard">Dashboard</a></h5>
<h5><a href="/products">Products</a></h5>
<h5>Orders</h5>
<h5><a href="/customers">Customers</a></h5>
<h5><a href="/settings">Settings</a></h5>
<hr>
<br>
<h4>Add a new order</h4>
<form action="/addOrder" method="POST">
    <select name="customer_id">
        @foreach(var i in @ViewBag.allCustomers)
        {
            <option value="@i.id">@i.Customer_Name</option>
        }
    </select>
    <input type="number" name="Quantity">
    <select name="product_id">
        @foreach(var i in @ViewBag.allProducts)
        {
            <option value="@i.id">@i.Product_Name</option>
        }
    </select>
    <input type="submit" value="Order">
</form>
<br>
<table>
    <tr>
        <th>Customer Name</th>
        <th>Product</th>
        <th>Quantity</th>
        <th>Date</th>
    </tr>
    @foreach(var i in ViewBag.allOrders)
    {
        <tr>
            <td>@i.Customer.Customer_Name</td>
            <td>@i.Product.Product_Name</td>
            <td>@i.Quantity</td>
            <td>@i.created_at.ToString("MMMM d, yyyy")</td>
        </tr>
    }
</table>