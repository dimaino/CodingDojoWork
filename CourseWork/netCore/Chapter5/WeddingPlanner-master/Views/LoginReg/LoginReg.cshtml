@{
    ViewData["Title"] = "Home Page";
}
@model WeddingPlanner.Models.CombinedLoginAndRegViewModel
<div class="login-container">
    <h1 class="title">Wedding Planner</h1>
    <hr>
    <div class="errors">
        @{
            if (ViewBag.Errors != null)
            {
                foreach(var error in ViewBag.Errors)
                {
                    <p class="alert alert-warning">@error</p>
                }
            }
        }
    </div>
    <div class="form-containers">
        <div class="login">
            <h3 class="form-center-title">Login</h3>
            <form asp-controller="LoginReg" asp-action="LoginRegister" asp-antiforgery="true" method="POST">
                <h5 class="form-titles">Email: </h5><input class="form-control" asp-for="Login.Email">
                <h5 class="form-titles">Password: </h5><input class="form-control" asp-for="Login.Password">
                <br>
                <input class="btn btn-success login-btn btn-block btn-colored" type="submit" value="Login"><br>
            </form>
        </div>        
        <div class="register">
            <h3 class="form-center-title">Register</h3>
            <form asp-controller="LoginReg" asp-action="LoginRegister" asp-antiforgery="true" method="POST">
                <h5 class="form-titles">First Name: </h5><input class="form-control" asp-for="Register.First_Name">
                <h5 class="form-titles">Last Name: </h5><input class="form-control" asp-for="Register.Last_Name">
                <h5 class="form-titles">Email: </h5><input class="form-control" asp-for="Register.Email">
                <h5 class="form-titles">Password: </h5><input class="form-control" asp-for="Register.Password">
                <h5 class="form-titles">Confirm Password: </h5><input class="form-control" asp-for="Register.Password_Confirmation">
                <br>
                <input class="btn btn-success login-btn btn-block btn-colored" type="submit" value="Register"><br>
            </form>
        </div>
    </div>
</div>